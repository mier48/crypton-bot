[Unit]
Description=Bot Crypto Trading Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/crypton-bot
EnvironmentFile=/opt/crypton-bot/.env
ExecStart=/opt/crypton-bot/venv/bin/python main.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
